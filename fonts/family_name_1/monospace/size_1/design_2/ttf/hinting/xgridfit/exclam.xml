<glyph ps-name="exclam">
  <constant name="last" value="11" />

  <!-- phantom points -->
  <constant name="character-origin" value="last + 1" />
  <constant name="advance-width-point" value="last + 2" />
  <constant name="top-origin" value="last + 3" />
  <constant name="advance-height-point" value="last + 4" />


  <with-vectors axis="x">
    <move>
      <reference>
        <point num="character-origin" />
      </reference>
      <point num="0" />
      <align>
        <point num="1" />
        <point num="8" />
        <point num="9" />
      </align>
      <shift>
        <point num="7" />
        <point num="2" />
      </shift>
    </move>

    <move distance="stem">
      <reference>
        <point num="0" />
      </reference>
      <point num="5" />
      <align>
        <point num="4" />
        <point num="11" />
        <point num="10" />
      </align>
      <shift>
        <point num="6" />
        <point num="3" />
      </shift>
    </move>
  </with-vectors>


  <with-vectors axis="y">
    <!-- dot -->
    <move>
      <point num="7" />
      <align>
        <point num="6" />
      </align>
      <shift>
        <point num="0" />
        <point num="5" />
      </shift>
    </move>

    <move distance="stem">
      <reference>
        <point num="7" />
      </reference>
      <point num="2" />
      <align>
        <point num="3" />
      </align>
      <shift>
        <point num="1" />
        <point num="4" />
      </shift>
    </move>

    <!-- line -->
    <move>
      <reference>
        <point num="top-origin" />
      </reference>
      <point num="9" />
      <align>
        <point num="10" />
      </align>
    </move>

    <move>
      <reference>
        <point num="2" />
      </reference>
      <point num="8" />
      <align>
        <point num="11" />
      </align>
    </move>
  </with-vectors>
</glyph>