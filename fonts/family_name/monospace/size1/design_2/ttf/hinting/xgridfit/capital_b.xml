<glyph ps-name="B">
  <constant name="last" value="20" />

  <!-- phantom points -->
  <constant name="character-origin" value="last + 1" />
  <constant name="advance-width-point" value="last + 2" />
  <constant name="top-origin" value="last + 3" />
  <constant name="advance-height-point" value="last + 4" />


  <!-- left stem -->

  <with-vectors axis="x">
    <move>
      <reference>
        <point num="character-origin" />
      </reference>
      <point num="0" />
      <align>
        <point num="1" />
      </align>
    </move>

    <move distance="stem">
      <reference>
        <point num="0" />
      </reference>
      <point num="15" />
      <align>
        <point num="20" />
        <point num="9" />
        <point num="14" />
      </align>
    </move>
  </with-vectors>


  <!-- right stem -->

  <with-vectors axis="x">
    <move>
      <reference>
        <point num="advance-width-point" />
      </reference>
      <point num="7" />
      <align>
        <point num="6" />
        <point num="4" />
        <point num="3" />
      </align>
      <shift>
        <point num="2" />
        <point num="5" />
        <point num="8" />
      </shift>
    </move>

    <move distance="stem">
      <reference>
        <point num="7" />
      </reference>
      <point num="17" />
      <align>
        <point num="11" />
        <point num="12" />
        <point num="18" />
      </align>
      <shift>
        <point num="10" />
        <point num="13" />
        <point num="16" />
        <point num="19" />
      </shift>
    </move>
  </with-vectors>


  <!-- bottom stem -->

  <with-vectors axis="y">
    <move>
      <point num="0" />
      <align>
        <point num="8" />
      </align>
      <shift>
        <point num="7" />
      </shift>
    </move>

    <move distance="stem">
      <reference>
        <point num="0" />
      </reference>
      <point num="15" />
      <align>
        <point num="16" />
      </align>
      <shift>
        <point num="17" />
      </shift>
    </move>
  </with-vectors>


  <!-- top stem -->

  <with-vectors axis="y">
    <move>
      <reference>
        <point num="top-origin" />
      </reference>
      <point num="1" />
      <align>
        <point num="2" />
      </align>
      <shift>
        <point num="3" />
      </shift>
    </move>

    <move distance="stem">
      <reference>
        <point num="1" />
      </reference>
      <point num="14" />
      <align>
        <point num="13" />
      </align>
      <shift>
        <point num="12" />
      </shift>
    </move>
  </with-vectors>


  <!-- bottom right diagonal -->
  <call-macro name="hint-corner">
    <with-param name="in-horz" value="16" />
    <with-param name="out-horz" value="8" />
    <with-param name="in-vert" value="17" />
    <with-param name="out-vert" value="7" />
  </call-macro>


  <!-- top right diagonal -->
  <call-macro name="hint-corner">
    <with-param name="in-horz" value="13" />
    <with-param name="out-horz" value="2" />
    <with-param name="in-vert" value="12" />
    <with-param name="out-vert" value="3" />
  </call-macro>


  <!-- bar -->

  <with-vectors axis="y">
    <interpolate round="to-grid">
      <reference>
        <point num="0" />
        <point num="1" />
      </reference>
      <point num="9" />
    </interpolate>

    <align>
      <reference>
        <point num="9" />
      </reference>
      <point num="10" />
    </align>

    <move distance="stem">
      <reference>
        <point num="9" />
      </reference>
      <point num="20" />
      <align>
        <point num="19" />
      </align>
    </move>
  </with-vectors>


  <!-- indent -->

  <with-vectors axis="y">
    <interpolate round="to-double-grid">
      <reference>
        <point num="19" />
        <point num="10" />
      </reference>
      <point num="5" />
    </interpolate>

    <shift>
      <reference>
        <point num="5" />
      </reference>
      <point num="4" />
      <point num="6" />
    </shift>
  </with-vectors>

  <call-macro name="hint-indent">
    <with-param name="out-top" value="4" />
    <with-param name="mid" value="5" />
    <with-param name="out-bot" value="6" />

    <with-param name="in-top-horz" value="10" />
    <with-param name="in-top-vert" value="11" />

    <with-param name="in-bot-horz" value="19" />
    <with-param name="in-bot-vert" value="18" />
  </call-macro>
</glyph>