<glyph ps-name="C">
  <constant name="last" value="15" />

  <!-- phantom points -->
  <constant name="character-origin" value="last + 1" />
  <constant name="advance-width-point" value="last + 2" />
  <constant name="top-origin" value="last + 3" />
  <constant name="advance-height-point" value="last + 4" />


  <!-- left stem -->

  <with-vectors axis="x">
    <move>
      <reference>
        <point num="character-origin" />
      </reference>
      <point num="1" />
      <align>
        <point num="2" />
      </align>
      <shift>
        <point num="0" />
        <point num="3" />
      </shift>
    </move>

    <move distance="stem">
      <reference>
        <point num="1" />
      </reference>
      <point num="10" />
      <align>
        <point num="9" />
      </align>
      <shift>
        <point num="11" />
        <point num="8" />
      </shift>
    </move>
  </with-vectors>


  <!-- right side -->
  <with-vectors axis="x">
    <move>
      <reference>
        <point num="advance-width-point" />
      </reference>
      <point num="14" />
      <align>
        <point num="5" />
      </align>
      <shift>
        <point num="4" />
        <point num="15" />
      </shift>
    </move>
  </with-vectors>


  <!-- bottom stem -->

  <with-vectors axis="y">
    <move>
      <point num="0" />
      <align>
        <point num="15" />
      </align>
      <shift>
        <point num="1" />
        <point num="14" />
      </shift>
    </move>

    <move distance="stem">
      <reference>
        <point num="0" />
      </reference>
      <point num="11" />
      <align>
        <point num="12" />
      </align>
      <shift>
        <point num="10" />
        <point num="13" />
      </shift>
    </move>
  </with-vectors>


  <!-- top stem -->

  <with-vectors axis="y">
    <move>
      <reference>
        <point num="top-origin" />
      </reference>
      <point num="3" />
      <align>
        <point num="4" />
      </align>
      <shift>
        <point num="2" />
        <point num="5" />
      </shift>
    </move>

    <move distance="stem">
      <reference>
        <point num="3" />
      </reference>
      <point num="8" />
      <align>
        <point num="7" />
      </align>
      <shift>
        <point num="9" />
        <point num="6" />
      </shift>
    </move>
  </with-vectors>


  <!-- bottom left diagonal -->
  <call-macro name="hint-corner">
    <with-param name="in-horz" value="11" />
    <with-param name="out-horz" value="0" />
    <with-param name="in-vert" value="10" />
    <with-param name="out-vert" value="1" />
  </call-macro>


  <!-- bottom right diagonal -->
  <call-macro name="hint-half-corner">
    <with-param name="in-horz" value="12" />
    <with-param name="out-horz" value="15" />
    <with-param name="in-vert" value="13" />
    <with-param name="out-vert" value="14" />
  </call-macro>


  <!-- top left diagonal -->
  <call-macro name="hint-corner">
    <with-param name="in-horz" value="8" />
    <with-param name="out-horz" value="3" />
    <with-param name="in-vert" value="9" />
    <with-param name="out-vert" value="2" />
  </call-macro>


  <!-- top right diagonal -->
  <call-macro name="hint-half-corner">
    <with-param name="in-horz" value="7" />
    <with-param name="out-horz" value="4" />
    <with-param name="in-vert" value="6" />
    <with-param name="out-vert" value="5" />
  </call-macro>
</glyph>