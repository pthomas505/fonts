<glyph ps-name="P">
  <constant name="last" value="13" />

  <!-- phantom points -->
  <constant name="character-origin" value="last + 1" />
  <constant name="advance-width-point" value="last + 2" />
  <constant name="top-origin" value="last + 3" />
  <constant name="advance-height-point" value="last + 4" />


  <!-- left stem -->

  <with-vectors axis="x">
    <move min-distance="no">
      <reference>
        <point num="character-origin" />
      </reference>
      <point num="0" />
      <shift>
        <point num="1" />
      </shift>
    </move>

    <move distance="stem-width">
      <reference>
        <point num="0" />
      </reference>
      <point num="7" />
      <shift>
        <point num="6" />
        <point num="8" />
        <point num="13" />
      </shift>
    </move>
  </with-vectors>


  <!-- right stem -->

  <with-vectors axis="x">
    <move>
      <reference>
        <point num="advance-width-point" />
      </reference>
      <point num="4" />
      <shift>
        <point num="2" />
        <point num="3" />
        <point num="5" />
      </shift>
    </move>

    <move distance="stem-width">
      <reference>
        <point num="4" />
      </reference>
      <point num="10" />
      <shift>
        <point num="9" />
        <point num="11" />
        <point num="12" />
      </shift>
    </move>
  </with-vectors>


  <!-- top stem -->

  <with-vectors axis="y">
    <move>
      <reference>
        <point num="top-origin" />
      </reference>
      <point num="1" />
      <shift>
        <point num="2" />
        <point num="3" />
      </shift>
    </move>

    <move distance="stem-width">
      <reference>
        <point num="1" />
      </reference>
      <point num="13" />
      <shift>
        <point num="12" />
        <point num="11" />
      </shift>
    </move>
  </with-vectors>


  <!-- bar -->

  <with-vectors axis="y">
    <interpolate round="to-grid">
      <reference>
        <point num="0" />
        <point num="1" />
      </reference>
      <point num="8" />
    </interpolate>

    <align>
      <reference>
        <point num="8" />
      </reference>
      <point num="9" />
      <shift>
        <point num="10" />
      </shift>
    </align>

    <move distance="stem-width">
      <reference>
        <point num="8" />
      </reference>
      <point num="6" />
      <shift>
        <point num="5" />
        <point num="4" />
      </shift>
    </move>
  </with-vectors>


  <!-- top right diagonal -->
  <call-macro name="hint-corner">
    <with-param name="in-horz" value="12" />
    <with-param name="out-horz" value="2" />
    <with-param name="in-vert" value="11" />
    <with-param name="out-vert" value="3" />
  </call-macro>


  <!-- bottom right diagonal -->
  <call-macro name="hint-corner">
    <with-param name="in-horz" value="9" />
    <with-param name="out-horz" value="5" />
    <with-param name="in-vert" value="10" />
    <with-param name="out-vert" value="4" />
  </call-macro>
</glyph>